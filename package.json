{
  "name": "spark-max-client",
  "productName": "REV SPARK MAX Client",
  "version": "1.0.0",
  "private": true,
  "author": "REV Robotics LLC",
  "description": "REV SPARK MAX Motor Controller Client",
  "main": "build/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/REVrobotics/SPARK-MAX-Client.git"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.18.0",
    "@blueprintjs/icons": "^3.10.0",
    "@blueprintjs/select": "^3.10.0",
    "@blueprintjs/table": "^3.7.0",
    "@types/yargs": "^13.0.2",
    "axios": "^0.18.1",
    "better-queue": "^3.8.10",
    "echarts": "^4.2.1",
    "echarts-for-react": "^2.0.15-beta.0",
    "electron-dl": "^1.14.0",
    "electron-updater": "^4.1.2",
    "opn": "^5.5.0",
    "protobufjs": "^6.8.8",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^6.0.1",
    "react-scripts-ts": "3.1.0",
    "redux": "^4.0.4",
    "ts-protoc-gen": "^0.10.0",
    "yargs": "^14.0.0",
    "zeromq": "^5.1.0"
  },
  "scripts": {
    "react": "react-scripts-ts start",
    "desktop": "npm run build-desktop && electron build/electron.js",
    "start": "concurrently \"npm run react\" \"npm run desktop\"",
    "build": "react-scripts-ts build",
    "build-desktop": "tsc -p tsconfig.electron.json",
    "predist": "gulp enterProd && npm run build && npm run build-desktop",
    "dist": "electron-builder",
    "prerelease-win": "gulp enterProd && npm run build && npm run build-desktop",
    "release-win": "gulp enterProd && electron-builder --win -p always",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/node": "^10.14.15",
    "@types/opn": "^5.5.0",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.5",
    "@types/react-redux": "^6.0.14",
    "@types/zeromq": "^4.6.2",
    "concurrently": "^4.1.1",
    "electron": "^3.1.13",
    "electron-builder": "^20.44.4",
    "electron-debug": "^2.2.0",
    "gulp": "^4.0.2",
    "typescript": "^3.5.3"
  },
  "build": {
    "appId": "org.revrobotics.sparkmax.client",
    "productName": "REV SPARK MAX Client",
    "copyright": "2019 REV Robotics LLC",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "bin/",
        "to": "."
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "res"
    },
    "win": {
      "target": "NSIS",
      "publish": "github"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "homepage": "./"
}
