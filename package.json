{
  "name": "spark-max-client",
  "productName": "SPARK MAX Client",
  "version": "0.9.1",
  "private": true,
  "author": "REV Robotics LLC",
  "description": "SPARK MAX Motor Controller Client",
  "main": "build/electron.js",
  "dependencies": {
    "@blueprintjs/core": "^3.10.0",
    "@blueprintjs/select": "^3.4.0",
    "@types/serialport": "^7.0.1",
    "axios": "^0.18.0",
    "better-queue": "^3.8.10",
    "echarts": "^4.2.0-rc.2",
    "echarts-for-react": "^2.0.15-beta.0",
    "protobufjs": "^6.8.8",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^6.0.0",
    "react-scripts-ts": "3.1.0",
    "redux": "^4.0.1",
    "zeromq": "^5.1.0"
  },
  "scripts": {
    "react": "react-scripts-ts start",
    "desktop": "npm run build-desktop && electron build/electron.js",
    "start": "concurrently \"npm run react\" \"npm run desktop\"",
    "build": "react-scripts-ts build",
    "build-desktop": "tsc -p tsconfig.electron.json",
    "predist": "npm run build && npm run build-desktop",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject"
  },
  "devDependencies": {
    "@types/node": "^10.12.15",
    "@types/react": "^16.7.17",
    "@types/react-dom": "^16.0.11",
    "@types/react-redux": "^6.0.11",
    "@types/zeromq": "^4.6.1",
    "concurrently": "^4.1.0",
    "electron": "^3.0.12",
    "electron-builder": "^20.38.3",
    "electron-debug": "^2.0.0",
    "electron-rebuild": "^1.8.2",
    "typescript": "^3.2.2"
  },
  "build": {
    "appId": "org.revrobotics.sparkmax.client.0.9.1",
    "productName": "SPARK MAX Client",
    "copyright": "2018 REV Robotics LLC",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "bin/",
        "to": "."
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "res"
    },
    "win": {
      "target": "NSIS"
    }
  },
  "homepage": "./"
}
